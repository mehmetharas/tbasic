NN$=COMMAND$
DEF SEG=&HB800
CLS
SAT=1 : SUT=1 : BLOAD NN$,0

OKU:
   KB$=""
   WHILE KB$="" : LOCATE SAT,SUT,1 : KB$=INKEY$:WEND
   ATT=(SAT-1)*160+(SUT-1)*2+1 : RENK=PEEK(ATT)
   IF KB$="S" THEN GOTO CIK
   IF KB$="A" THEN IF RENK<>255 THEN RENK=RENK+1 : POKE ATT,RENK
   IF KB$="Z" THEN IF RENK<>001 THEN RENK=RENK-1 : POKE ATT,RENK
   IF LEN(KB$)=2 THEN KB=ASC(RIGHT$(KB$,1))  ELSE KB=0
   IF KB=72 THEN IF SAT<>01 THEN SAT=SAT-1
   IF KB=80 THEN IF SAT<>23 THEN SAT=SAT+1
   IF KB=75 THEN IF SUT<>01 THEN SUT=SUT-1
   IF KB=77 THEN IF SUT<>80 THEN SUT=SUT+1
   GOTO OKU
CIK:
   LOCATE 24,1: INPUT"KAYIT YAPAYIMMI",EH$
   IF EH$<>"E" THEN END
   BSAVE NN$,0,3968